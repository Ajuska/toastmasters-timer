<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <httpProtocol>
            <customHeaders>
                <remove name="X-Powered-By" />
                <add name="Referrer-Policy" value="no-referrer" />
                <add name="Permissions-Policy"
                    value="camera=(), geolocation=(), microphone=(), autoplay=(), fullscreen=(), picture-in-picture=(), sync-xhr=(), encrypted-media=(), oversized-images=()" />
                <add name="Strict-Transport-Security"
                    value="max-age=31536000; includeSubdomains; preload" />
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                <add name="X-Xss-Protection" value="1; mode=block" />
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="Content-Security-Policy"
                    value="default-src 'self'; script-src 'self' https:; style-src 'self' https:; img-src 'self' data:; font-src 'self' https: data:;" />
            </customHeaders>
        </httpProtocol>
    </system.webServer>
</configuration>